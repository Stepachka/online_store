datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id       Int         @id @default(autoincrement())
  title    String
  content  String?
  status   String
  custom   User?       @relation(fields: [customId], references: [id])
  customId Int?
  items    OrderItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id Int @id @default(autoincrement())

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  order   Order @relation(fields: [orderId], references: [id])
  orderId Int

  quantity Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id         Int         @id @default(autoincrement())
  cost       Float
  title      String
  img        String
  categories Category[]
  orderItems OrderItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id         Int         @id @default(autoincrement())
  title      String
  products   Product[]
  orderItems OrderItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  orders Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
